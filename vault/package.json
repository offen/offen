{
  "name": "vault",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --port $PORT -- -p [ split-require --sri sha384 ]",
    "pretest": "dependency-check package.json",
    "test": "mochify --chrome $(which google-chrome) --allow-chrome-as-root src/{,**}/*.test.js",
    "posttest": "standard",
    "fix": "standard --fix",
    "build": "gulp",
    "extract-strings": "extract-strings index.js $(find src -name '*.js')",
    "licenses": "npm-license-crawler --production --onlyDirectDependencies --omitVersion --csv dependencies.csv"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "dexie": "^3.0.1",
    "jwk-to-pem": "^2.0.2",
    "nanohtml": "^1.8.1",
    "node-forge": "^0.10.0",
    "offen": "file:./../packages",
    "split-require": "^3.1.2",
    "ulid": "^2.3.0",
    "underscore": "^1.10.2",
    "unfetch": "^4.1.0",
    "unibabel": "^2.1.8",
    "url-polyfill": "^1.1.7",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@offen/l10nify": "^0.2.0",
    "@offen/schemaify": "^0.1.0",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "budo": "^11.6.3",
    "dependency-check": "^3.4.0",
    "envify": "^4.1.0",
    "fetch-mock": "^7.3.3",
    "flush-write-stream": "^2.0.0",
    "gulp": "^4.0.2",
    "gulp-append-prepend": "^1.0.8",
    "gulp-clean": "^0.4.0",
    "gulp-rev": "^9.0.0",
    "gulp-rev-replace": "^0.4.4",
    "gulp-sri-hash": "^2.2.0",
    "gulp-uglify": "^3.0.2",
    "minify-stream": "^2.1.0",
    "mochify": "^6.2.0",
    "npm-license-crawler": "^0.2.1",
    "sinon": "^7.3.2",
    "standard": "^16.0.3",
    "tinyify": "^2.5.1",
    "uglifyify": "^5.0.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "browserify": {
    "transform": [
      "babelify",
      "@offen/schemaify",
      "envify",
      [
        "@offen/l10nify",
        {
          "locale": "en"
        }
      ],
      "nanohtml"
    ]
  },
  "standard": {
    "globals": [
      "__"
    ],
    "ignore": [
      "dist/**/*.*",
      "bundle.*.js"
    ],
    "env": [
      "mocha"
    ]
  }
}
