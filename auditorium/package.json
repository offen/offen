{
  "name": "auditorium",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "budo index.js --pushstate --port $PORT -- --poll",
    "test": "npm run server & (VAULT_HOST=http://localhost:9876 npm run mochify; status=$?; kill $(lsof -t -i:9876); exit $status)",
    "mochify": "mochify --chrome $(which google-chrome) --allow-chrome-as-root {,**}/*.test.js",
    "server": "http-server __fixtures__ -p 9876 -s",
    "pretest": "dependency-check package.json",
    "posttest": "standard",
    "fix": "standard --fix",
    "build": "gulp",
    "extract-strings": "gulp extract-strings"
  },
  "dependencies": {
    "choo": "^7.0.0",
    "choo-devtools": "^2.5.1",
    "date-fns": "^1.30.1",
    "offen": "file:./../packages",
    "plotly.js-basic-dist": "^1.51.2",
    "underscore": "^1.9.1",
    "url-polyfill": "^1.1.7",
    "watchify": "^3.11.1"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "budo": "^11.6.3",
    "dependency-check": "^3.3.0",
    "envify": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-append-prepend": "^1.0.8",
    "gulp-clean": "^0.4.0",
    "gulp-rev": "^9.0.0",
    "gulp-uglify": "^3.0.2",
    "http-server": "^0.11.1",
    "mochify": "^6.3.0",
    "nanohtml": "^1.6.3",
    "standard": "^12.0.1",
    "tinyify": "^2.5.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "browserify": {
    "transform": [
      [
        "envify",
        {
          "LOCALE": "en"
        }
      ],
      "nanohtml",
      "offen/localize"
    ]
  },
  "standard": {
    "globals": [
      "__"
    ],
    "ignore": [
      "dist/**/*.*"
    ],
    "env": [
      "mocha"
    ]
  },
  "offen": {
    "locales": [
      "en"
    ]
  }
}
