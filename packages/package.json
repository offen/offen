{
  "name": "offen",
  "version": "0.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "npm run server & (npm run mochify; status=$?; kill $(lsof -t -i:9876); exit $status)",
    "mochify": "mochify --allow-chrome-as-root ./**/*.test.js",
    "server": "http-server __fixtures__ -p 9876 -s",
    "pretest": "dependency-check package.json",
    "posttest": "standard",
    "fix": "standard --fix"
  },
  "dependencies": {
    "envify": "^4.1.0",
    "glob": "^7.1.5",
    "jscodeshift": "^0.6.4",
    "minimist": "^1.2.2",
    "pofile": "^1.1.0",
    "through2": "^3.0.1",
    "touch": "^3.1.0"
  },
  "devDependencies": {
    "dependency-check": "^3.3.0",
    "fetch-mock": "^7.3.3",
    "http-server": "^0.12.1",
    "mochify": "^6.2.0",
    "standard": "^14.3.1"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  }
}
